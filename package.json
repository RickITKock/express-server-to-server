{
  "name": "express-server-to-server",
  "version": "1.0.0",
  "description": "This serves as an Express API Template for developer who wish to apply TDD in typescript.",
  "main": "./src/index.ts",
  "scripts": {
    "test": "jest --watchAll --verbose --detectOpenHandles",
    "build": "npx tsc --project tsconfig.build.json",
    "start:build": "npx tsc -w --project tsconfig.build.json",
    "start:run": "nodemon build/index.js",
    "start": "concurrently npm:start:*",
    "start-dev": "NODE_ENV=development concurrently npm:start:*",
    "start-prod": "NODE_ENV=production concurrently npm:start:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RickITKock/express-server-to-server"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.14",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^29.0.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.0.3",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "concurrently": "^7.4.0",
    "cookie-session": "^2.0.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "nodemon": "^2.0.20",
    "signale": "^1.4.0",
    "winston": "^3.8.2",
    "zod": "^3.19.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
